<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  
	<modelVersion>4.0.0</modelVersion>

	<parent>
        <groupId>org.learn.geode</groupId>
        <artifactId>geode</artifactId>
        <version>1.0-SNAPSHOT</version>
    </parent>
    <artifactId>geode-dist</artifactId>
    <packaging>pom</packaging>

    <name>geode-distribution module</name>
    <profiles>
        <profile>
            <id>dist-assembly</id>
            <activation>
                <property>
                    <name>assembly</name>
                    <value>true</value>
                </property>
            </activation>
            <dependencies>
                <dependency>
                    <groupId>org.learn.geode</groupId>
                    <artifactId>geode-common</artifactId>
                    <version>${project.version}</version>
                </dependency>
                <dependency>
                    <groupId>org.learn.geode</groupId>
                    <artifactId>geode-server</artifactId>
                    <version>${project.version}</version>
                </dependency>
                <dependency>
                    <groupId>org.learn.geode</groupId>
                    <artifactId>geode-client-console</artifactId>
                    <version>${project.version}</version>
                </dependency>
				<!-- <dependency>
                    <groupId>org.learn.geode</groupId>
                    <artifactId>geode-client-web</artifactId>
                    <version>${project.version}</version>
                </dependency> -->
            </dependencies>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-assembly-plugin</artifactId>
                        <version>2.3</version>
                        <executions>
                            <execution>
                                <id>id</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>single</goal>
                                </goals>
                                <configuration>
                                    <finalName>geode-console-${project.version}</finalName>
                                    <appendAssemblyId>false</appendAssemblyId>
                                    <descriptors>
                                        <descriptor>assembly/geode-console-assembly.xml</descriptor>
                                    </descriptors>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>client-console</id>
            <activation>
                <property>
                    <name>client-console</name>
                    <value>true</value>
                </property>
            </activation>
            <dependencies>
                <dependency>
                    <groupId>org.learn.geode</groupId>
                    <artifactId>geode-common</artifactId>
                    <version>${project.version}</version>
                </dependency>
                <!-- <dependency>
                    <groupId>org.learn.geode</groupId>
                    <artifactId>server</artifactId>
                    <version>${project.version}</version>
                </dependency> -->
                <dependency>
                    <groupId>org.learn.geode</groupId>
                    <artifactId>geode-client-console</artifactId>
                    <version>${project.version}</version>
                </dependency>
            </dependencies>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-assembly-plugin</artifactId>
                        <version>2.3</version>
                        <executions>
                            <execution>
                                <id>id</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>single</goal>
                                </goals>
                                <configuration>
                                    <finalName>client-console-${project.version}</finalName>
                                    <appendAssemblyId>false</appendAssemblyId>
                                    <descriptors>
                                        <descriptor>assembly/client-console-assembly.xml</descriptor>
                                    </descriptors>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
